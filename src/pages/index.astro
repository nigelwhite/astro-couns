---
import HomeLayout from "../layouts/HomeLayout.astro";
import Card from "../components/Card.astro";
const pageTitle = "Home";
---

<HomeLayout class="homepage">
  <section class="articles">
    <Card
      cardTitle="Counselling"
      cardText="Talk it out"
      cardImage="https://picsum.photos/id/1005/800/450"
      cardImagealt=""
      buttonText="about Counselling"
      buttonUrl="counselling"
    />
    <Card
      cardTitle="Supervision"
      cardText="Clinical and straight"
      cardImage="https://picsum.photos/id/103/800/450"
      cardImagealt=""
      buttonText="about Supervision"
      buttonUrl="supervision"
    />
  </section>

  <p>
    Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo
    ligula eget dolor. Aenean massa. Cum sociis natoque penatibus et magnis dis
  </p>
</HomeLayout>

<style>
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  .articles {
    display: flex;
    justify-content: space-around;
    /* display: grid;
    max-width: 1200px;
    margin-inline: auto;
    padding-inline: 24px;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 24px; */
  }

  @media screen and (max-width: 960px) {
    article {
      container: card/inline-size;
    }
    .article-body p {
      display: none;
    }
  }

  @container card (min-width: 380px) {
    .article-wrapper {
      display: grid;
      grid-template-columns: 100px 1fr;
      gap: 16px;
    }
    .article-body {
      padding-left: 0;
    }
    figure {
      width: 100%;
      height: 100%;
      overflow: hidden;
    }
    figure img {
      height: 100%;
      aspect-ratio: 1;
      object-fit: cover;
    }
  }

