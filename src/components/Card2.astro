---
const { cardTitle, cardText, cardImage, buttonText, buttonUrl } = Astro.props;
import PhoneIcon from "astro-feather-icons/Phone";
---

<div class="card">
  <h2>{cardTitle}</h2>
  <img class="card-image" src={cardImage} alt="" />
  <p>{cardText}</p>
  <a class="custom-btn" href={buttonUrl}>
    <PhoneIcon class="button-icon" />
    {buttonText}
  </a>

  <style>
    .card {
      width: 300px;
      border: 1px black solid;
    }

    .card-image {
      width: 300px;
    }

    .button-icon {
      margin-right: 1rem;
    }

    .custom-btn {
      /* color: white; */
      padding: 15px 25px;
      border-radius: 20px;
      cursor: pointer;
      font-size: 1.2rem;
      width: 15rem;
      padding: 1rem;
      text-decoration: none;
      display: flex;
      flex-direction: row;
      justify-content: center;
      align-items: center;
    }
  </style>
</div>
