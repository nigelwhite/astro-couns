---
import Navigation from "./Navigation.astro";
import Hamburger from "./Hamburger.astro";

const number = 7;
const showPlural = number > 1;
const showBanner = true;
---

<header>
  <nav>
    <Hamburger />
    <Navigation />

    <h1>The current URL is: {Astro.url.pathname}</h1>

    <div>
      <p>
        {
          showPlural
            ? `This map requires ${number} players`
            : "This map is single player"
        }
      </p>
    </div>
  </nav>
</header>

<style>
  .title-banner {
    text-decoration: none;
    font-family: var(--font-title);
    color: var(--color-title);
    display: flex;
    justify-content: flex-start;
    margin-bottom: 1rem;
  }

  @media screen and (min-width: 636px) {
    .title-banner {
      justify-content: center;
    }
  }
</style>

